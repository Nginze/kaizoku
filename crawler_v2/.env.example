# Database Configuration
# MongoDB connection string
MONGO_URL=mongodb://localhost:27017/anidb

# Redis connection string
REDIS_URL=redis://localhost:6379

# Redis with authentication (if needed)
# REDIS_URL=redis://username:password@localhost:6379

# Redis with SSL (if needed)
# REDIS_URL=rediss://username:password@localhost:6380

# Logging Configuration
LOG_LEVEL=info

# Optional: Custom rate limiting (requests per minute)
# MAX_REQUESTS_PER_MINUTE=85

# Optional: Worker configuration
# DEFAULT_WORKERS=3
# MAX_WORKERS=5

# Optional: Monitoring configuration
# MONITORING_INTERVAL=10000